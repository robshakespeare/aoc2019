root = true
 
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
 
[*.{cs,cake,py,xml,xsd}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
 
[*.{json,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
 
[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false
 
[*.feature]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false
